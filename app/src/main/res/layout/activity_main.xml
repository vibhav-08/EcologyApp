<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:textAlignment="center"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/FoodManagement"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="172dp"
        android:fontFamily="sans-serif-black"


        android:text="@string/food_management"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:backgroundTint="#FFFF00"
        android:onClick="FoodBankActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Recycling"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Recycling"
        android:layout_width="200dp"
        android:layout_height="50dp"


        android:layout_marginTop="204dp"
        android:fontFamily="sans-serif-black"
        android:onClick="RecyclingActivity"
        android:text="@string/recycling"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="#FFFF00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>